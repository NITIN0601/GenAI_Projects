# LLM Settings (Ollama - FREE & LOCAL)
LLM_MODEL=llama3.2
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
OLLAMA_BASE_URL=http://localhost:11434

# Embedding Settings (sentence-transformers - FREE & LOCAL)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Vector Database Settings (ChromaDB - FREE & LOCAL)
CHROMA_COLLECTION_NAME=financial_tables
DISTANCE_METRIC=cosine

# Redis Settings (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=true
CACHE_TTL=86400

# Retrieval Settings
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# PDF Processing
HANDLE_TWO_COLUMN=true
EXTRACT_TABLES=true
